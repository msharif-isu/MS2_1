<!-- res/drawable/rounded_corners.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color of the shape -->
    <solid android:color="@color/mint_cream"/>

    <!-- Corner radius for rounded corners -->
    <corners android:radius="15dp"/>

    <!-- Border definition -->
    <stroke
        android:width="2dp" android:color="@color/Ebony"/>

    <!-- Optional: Add padding inside the shape to prevent content from touching the border -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>
