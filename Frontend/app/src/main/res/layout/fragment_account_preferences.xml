<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountPreferencesFragment"
    android:background="@color/Indian_red"
    >



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_Picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="73dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_launcher_foreground"/>


    <EditText
        android:id="@+id/usernameHolder"
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="130dp"
        android:hint="Username"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/firstname"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="130dp"
        android:hint="First"
        android:textColor="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <EditText
        android:id="@+id/lastname"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="130dp"
        android:hint="First"
        android:textColor="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"/>


    <TextView
        android:id="@+id/password_text_view"
        android:layout_width="265dp"
        android:layout_height="33dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="180dp"
        android:inputType="textPassword"
        android:textSize="25dp"
        android:hint="Your Password"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/hideunhide"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="365dp"
        android:src="@android:drawable/ic_menu_view"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <EditText
        android:id="@+id/bio"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="15dp"
        android:hint="Bio: "
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/updatePrefs"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cornerRadius="5dp"
        android:text="Update Preferences"
        android:textColor="@color/Ebony"
        android:backgroundTint="@color/mint_cream"/>

    <Button
        android:id="@+id/addSongs"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        app:cornerRadius="5dp"
        android:text="Add Songs"
        android:textColor="@color/Ebony"
        android:backgroundTint="@color/mint_cream"/>

    <Button
        android:id="@+id/seeReports"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        app:cornerRadius="5dp"
        android:text="See Reports"
        android:textColor="@color/Ebony"
        android:backgroundTint="@color/mint_cream" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        app:cornerRadius="5dp"
        android:text="Logout"
        android:textColor="@color/Ebony"
        android:backgroundTint="@color/mint_cream"/>
    <Button
        android:id="@+id/delAccount"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        app:cornerRadius="5dp"
        android:text="Delete Account"
        android:textColor="@color/Ebony"
        android:backgroundTint="@color/mint_cream"/>

    <ImageButton
        android:id="@+id/changePicture"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="145dp"
        android:src="@android:drawable/ic_menu_camera"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageButton
        android:id="@+id/editInfo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="365dp"
        android:layout_marginTop="15dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"/>


</FrameLayout>