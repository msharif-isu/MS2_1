<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/Indian_red">


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/ReportedName"
        android:textSize="16sp"
        android:layout_marginStart="50dp"
        android:text="ReportedName"
        android:textColor="@color/Jet"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_Picture"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="7dp"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/ReportedMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="dd/mm/yyyy hh:mm"
        android:textColor="@color/Ebony"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/ReportReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ReportedName"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="Report Reason"
        android:textColor="@color/Ebony"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/ReportedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReportedName"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:text="Last sent message"
        android:textColor="@color/Ebony"
        android:textSize="10sp"/>


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Ebony"/>


</RelativeLayout>